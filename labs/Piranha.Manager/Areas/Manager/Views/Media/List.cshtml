@inject IViewLocalizer Localizer
@section script
{
    <script src="~/assets/js/piranha.media.min.js"></script>
}
<div id="media">
    <div class="top">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">@Localizer["Content"]</li>
                <li class="breadcrumb-item active" aria-current="page">@Localizer["Media"]</li>
            </ol>
        </nav>

        <div class="container-fluid">
            <div class="top-nav">
                <button v-if="listView" v-on:click.prevent="toggle" class="btn btn-secondary"><i class="fas fa-list"></i></button>
                <button v-if="!listView" v-on:click.prevent="toggle" class="btn btn-secondary"><i class="fas fa-table"></i></button>
                <button class="btn btn-primary btn-labeled" data-toggle="modal" data-target="#aliasModal">
                    <i class="fas fa-plus"></i>@Localizer["Add"]
                </button>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <form action="@Url.Action("Upload", "MediaApi")" class="dropzone needsclick dz-clickable" id="dropzone" enctype="multipart/form-data">
                    <input type="hidden" name="Model.ParentId" v-model="currentFolderId"/>
                    <div class="dz-message needsclick">
                        <span class="fas fa-cloud-upload-alt"></span>
                        Drop files here or click to upload.
                    </div>
                </form>
            </div>
            <div id="previewsContainer" class="col-auto">

            </div>
        </div>
        
    </div>

    <template v-if="listView">
        <partial name="Partial/_MediaList" />
    </template>

    <template v-else>
        <partial name="Partial/_MediaGallery" />
    </template>
</div>